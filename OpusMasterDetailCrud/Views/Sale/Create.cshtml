@model SaleViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="col-11 display-6 text-primary text-center text-bold alert alert-info">Sale your product</div>

<div class="card col-11">
    <div class="card-header">
        
    </div>

    <form asp-action="Create" enctype="multipart/form-data">
        @Html.AntiForgeryToken()
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="row">
            <div class="col-8">
                <div class="col-md-12">
                    <table id="ExpTable" class="table table-striped  table-active table-sm">
                        <thead>
                            <tr>
                                <th class="text-center">Product Code</th>
                                <th class="text-center">Product Name</th>
                                <th class="text-center">Price</th>
                                <th class="text-center">Quantity</th>
                                <th class="text-center"><button id="btnAddResult" type="button" class="btn btn-info btn-sm"><i class="fa fa-plus"></i> Add</button></th>

                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.SalesDetails.Count; i++)
                            {
                                <tr>
                                    <td class="col-2">
                                        <input asp-for="SalesDetails[i].ProductCode" class="form-control alert-info" />
                                    </td>
                                    <td class="col-3">
                                        <input asp-for="SalesDetails[i].ProductName" class="form-control alert-success" />
                                    </td>
                                    <td class="col-2">
                                        <input asp-for="SalesDetails[i].Price" class="form-control alert-danger"  />
                                    </td>
                                    <td class="col-1">
                                        <input asp-for="SalesDetails[i].Quantity" class="form-control alert-warning" />
                                    </td>
                                    <td class="col-1">
                                        <button type="button" class="justify-content-center btn btn-outline-danger btn-sm" onclick="DeleteItem(this)"><i class="fa fa-trash"></i></button>
                                        
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    


                </div>
                <input type="hidden" id="hdnLastIndex" value="0" />
            </div>
            <div class="col-4">
                <div class="form-group">
                    <label asp-for="InvoiceNumber" class="control-label"></label>
                    <input asp-for="InvoiceNumber" class="form-control alert-primary" />
                    <span asp-validation-for="InvoiceNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CustomerName" class="control-label"></label>
                    <input asp-for="CustomerName" class="form-control alert-success" />
                    <span asp-validation-for="CustomerName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNo" class="control-label"></label>
                    <input asp-for="MobileNo" class="form-control alert-danger" />
                    <span asp-validation-for="MobileNo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label"></label>
                    <input asp-for="Address" class="form-control alert-warning" />
                    <span asp-validation-for="Address" class="text-danger"></span>

                    <div class="col-6-group text-right p-2">
                        <input id="submitFormCreate" type="submit" value="Create" class="btn btn-outline-primary" />
                        <a asp-action="Index" class="btn btn-outline-secondary">&nbsp;<i class="fa-solid fa-arrow-left-from-line fa-beat-fade"></i> Back to List&nbsp;</a>
                    </div>
                </div>


            </div>            
            
        </div>
    </form>
</div>
<script src="~/jquery/jquery.min.js"></script>


